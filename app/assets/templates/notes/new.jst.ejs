<h2>CREATE NOTE</h2>

<form class="create-note">
  <label>Select notebook:
  <select name="notebook_id">
  <% notebooks.forEach(function(notebook){ %>
    <option value="<%= notebook.escape("id")%>"><%= notebook.escape("title")%></option>
  <% }) %>
</select>
</label>
  <label>Select color:
  <select name="color">
    <option value="">None</option>
    <option value="R">RED</option>
    <option value="B">BLUE</option>
    <option value="G">GREEN</option>
  </select>
</label>
  <br>
  <input type="text" name="title" placeholder="Title your note">
  <br>
  <textarea name="body" placeholder="Drag files here or just start typing..."></textarea>
  <button class="cancel-note">Cancel</button>
  <button class="done-note">Done</button>
</form>
