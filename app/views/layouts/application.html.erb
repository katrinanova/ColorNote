<!DOCTYPE html>
<html>
<head>
  <title>ColorNote</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
  <h1>COLORNOTE</h1>
  <% if flash[:notices] %>
    <div class="notices">
      <% flash[:notices].each do |msg| %>
        <p><b><%= msg %></b></p>
      <% end %>
    </div>
  <% end %>

</header>


<%= yield %>

<% if current_user %>
  <%= button_to "Log Out", session_url, method: :delete %>
<% end %>

</body>
</html>
